# ============================================
# Pecus Aspire - Production Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=pecus
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# Port Configuration
# ============================================
# API port (external)
API_PORT=7265

# Frontend port (external)
FRONTEND_PORT=3000

# ============================================
# URL Configuration
# ============================================
# Public URL of the frontend (used by backend for CORS, email links, etc.)
FRONTEND_URL=https://your-domain.com

# Public API URL (used by frontend during build)
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# ============================================
# Security
# ============================================
# JWT Secret Key (generate a secure random string)
JWT_SECRET=your_jwt_secret_here_at_least_32_characters

# ============================================
# Optional: Mail Configuration
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=noreply@your-domain.com

# ============================================
# Optional: AI Configuration
# ============================================
# OPENAI_API_KEY=sk-...
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=...
