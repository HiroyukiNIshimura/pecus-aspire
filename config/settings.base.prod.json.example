{
  "_comment": "本番環境用のオーバーライド設定。このファイルをコピーして settings.base.prod.json を作成し、各値を本番環境に合わせて設定してください。",

  "_infrastructure": {
    "_comment_1": "【必須】本番環境のパスと認証情報",
    "dataPath": "/var/your-app/data",

    "postgres": {
      "_comment": "【必須】本番用の強力なパスワードを設定",
      "user": "pecus",
      "password": "CHANGE_ME_SECURE_PASSWORD_HERE",
      "db": "pecusdb"
    },

    "urls": {
      "_comment": "【必須】本番環境の公開URLを設定",
      "allowDomain": "your-domain.com",
      "frontend": "https://your-domain.com",
      "webapiPublic": "https://your-domain.com/api",
      "webapiInternal": "http://pecusapi:7265",
      "lexicalConverter": "http://lexicalconverter:5100"
    },

    "monitoring": {
      "_comment": "本番環境では監視を有効化推奨",
      "enabled": true,
      "diskMountPoints": ["/", "/var/your-app/data"]
    }
  },

  "_shared": {
    "LexicalConverter": {
      "_comment": "【必須】本番用のAPIキーを設定（openssl rand -base64 16 等で生成）",
      "GrpcApiKey": "CHANGE_ME_GENERATE_NEW_KEY"
    },

    "Email": {
      "_comment": "【必須】本番用のSMTP設定",
      "SmtpHost": "smtp.your-provider.com",
      "SmtpPort": 465,
      "UseSsl": true,
      "Username": "your-smtp-username",
      "Password": "CHANGE_ME_SMTP_PASSWORD",
      "FromEmail": "noreply@your-domain.com",
      "FromName": "Your App Name"
    },

    "DefaultAi": {
      "_comment": "【必須】AI APIキーを設定",
      "Provider": "DeepSeek",
      "Model": "deepseek-chat",
      "ApiKey": "CHANGE_ME_AI_API_KEY"
    }
  },

  "webapi": {
    "Pecus": {
      "Jwt": {
        "_comment": "【必須】本番用のJWT設定（IssuerSigningKeyは64文字以上のランダム文字列）",
        "IssuerSigningKey": "CHANGE_ME_GENERATE_64_CHAR_RANDOM_STRING_HERE_USE_OPENSSL_RAND",
        "ValidIssuer": "https://your-domain.com/",
        "ValidAudience": "https://your-domain.com/"
      }
    },
    "Security": {
      "_comment": "【必須】許可するフロントエンドURLを設定",
      "AllowedFrontendUrls": ["https://your-domain.com"]
    }
  },

  "dbmanager": {
    "BackOffice": {
      "_comment": "【必須】管理者アカウントの本番用パスワードを設定",
      "Users": [
        {
          "Email": "admin@your-domain.com",
          "Username": "System Administrator",
          "Password": "CHANGE_ME_ADMIN_PASSWORD"
        }
      ]
    },
    "DemoMode": {
      "_comment": "本番環境ではデモモードを無効化",
      "Enabled": false
    }
  }
}