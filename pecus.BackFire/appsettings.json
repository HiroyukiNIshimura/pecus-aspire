  ,
  "RefreshTokenCleanup": {
    "BatchSize": 1000,
    "OlderThanDays": 30,
    "Hour": 2,
    "Minute": 0
  },
  "DeviceCleanup": {
    "BatchSize": 1000,
    "OlderThanDays": 30,
    "VeryOldDays": 365,
    "Hour": 2,
    "Minute": 30
  },
  "EmailChangeTokenCleanup": {
    "BatchSize": 1000,
    "OlderThanDays": 7,
    "Hour": 3,
    "Minute": 0
  },
  "UploadsCleanup": {
    "UploadsBasePath": "",
    "TempRetentionHours": 24,
    "Hour": 4,
    "Minute": 0
  },
  "ChatCleanup": {
    "BatchSize": 1000,
    "System": {
      "OlderThanDays": 40
    },
    "Group": {
      "OlderThanDays": 120
    },
    "Dm": {
      "OlderThanDays": 380
    },
    "Ai": {
      "OlderThanDays": 40
    },
    "Hour": 5,
    "Minute": 0
  },
