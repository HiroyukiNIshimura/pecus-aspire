{
  "biome.enabled": true,
  "editor.formatOnSave": false,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "explicit"
    }
  },
  "omnisharp.enableEditorConfigSupport": true,
  "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "fullSolution",
  "shellcheck.ignorePatterns": {
    "**/.env*": true
  },
  "editor.defaultFormatter": "biomejs.biome",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "chat.useClaudeSkills": false,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": "copilot-commit-message-instructions.md",
    },
  ],
  "chat.tools.terminal.autoApprove": {
    "dotnet build": true,
    "dotnet ef": true,
    "dotnet add package": true,
    //"npm run build":true
  },
  "files.associations": {
    "appsettings*.json": "jsonc"
  },
  "chat.mcp.serverSampling": {
    "pecus-aspire/.vscode/mcp.json: MCP_DOCKER": {
      "allowedModels": [
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4",
        "copilot/claude-sonnet-4.5",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "openai/gpt-5-nano",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/grok-code-fast-1",
        "copilot/oswe-vscode-prime"
      ]
    },
    "pecus-aspire/.vscode/mcp.json: aspire": {
      "allowedModels": [
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4",
        "copilot/claude-sonnet-4.5",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
