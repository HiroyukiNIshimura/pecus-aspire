{
  "name": "pecus.lexicalconverter",
  "version": "1.0.0",
  "description": "Lexical JSON to HTML/Markdown/PlainText converter gRPC service",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r ./dist/ignore-css.js dist/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register -r ./src/ignore-css.ts src/main.ts",
    "start:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main.ts",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --fix src/",
    "update:check": "ncu",
    "update": "ncu -u"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@coati/editor": "*",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@lexical/code": "0.40.0",
    "@lexical/headless": "0.40.0",
    "@lexical/html": "0.40.0",
    "@lexical/link": "0.40.0",
    "@lexical/list": "0.40.0",
    "@lexical/mark": "0.40.0",
    "@lexical/markdown": "0.40.0",
    "@lexical/overflow": "0.40.0",
    "@lexical/rich-text": "0.40.0",
    "@lexical/table": "0.40.0",
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/microservices": "^11.1.13",
    "@nestjs/platform-fastify": "^11.1.13",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^28.0.0",
    "lexical": "0.40.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "undici": "^7.20.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.1",
    "npm-check-updates": "^19.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
