{
  "name": "pecus.lexicalconverter",
  "version": "1.0.0",
  "description": "Lexical JSON to HTML/Markdown/PlainText converter gRPC service",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main.ts",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --fix src/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.14.2",
    "@grpc/proto-loader": "^0.8.0",
    "@lexical/code": "^0.38.2",
    "@lexical/headless": "^0.38.2",
    "@lexical/html": "^0.38.2",
    "@lexical/link": "^0.38.2",
    "@lexical/list": "^0.38.2",
    "@lexical/mark": "^0.38.2",
    "@lexical/markdown": "^0.38.2",
    "@lexical/overflow": "^0.38.2",
    "@lexical/rich-text": "^0.38.2",
    "@lexical/table": "^0.38.2",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-fastify": "^11.1.9",
    "lexical": "^0.38.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
