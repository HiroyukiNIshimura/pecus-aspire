{
  "name": "pecus-aspire",
  "private": true,
  "workspaces": [
    "packages/*",
    "pecus.Frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=pecus.Frontend",
    "build": "npm run build --workspace=pecus.Frontend",
    "build:editor": "npm run build --workspace=@pecus/notion-like-editor",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
