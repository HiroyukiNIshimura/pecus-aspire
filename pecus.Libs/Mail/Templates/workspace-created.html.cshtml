@model Pecus.Libs.Mail.Templates.Models.WorkspaceCreatedEmailModel
@{
    Layout = "_Layout.html.cshtml";
}

<h2>新しいワークスペースが作成されました</h2>

<p>@Model.OrganizationName に新しいワークスペースが作成されました。</p>

<p><strong>ワークスペース名:</strong> @Model.WorkspaceName</p>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <div class="info">
        <p class="pre-wrap">@Model.Description</p>
    </div>
}

<ul>
    <li>ワークスペースコード: @Model.WorkspaceCode</li>
    @if (!string.IsNullOrWhiteSpace(Model.CategoryName))
    {
        <li>カテゴリ: @Model.CategoryName</li>
    }
    <li>作成者: @Model.CreatedByName</li>
    <li>作成日時 (JST): @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</li>
    <li>組織: @Model.OrganizationName</li>
</ul>

<div class="center">
    <a href="@Model.WorkspaceUrl" class="button">ワークスペースを表示</a>
</div>

<p class="muted">このメールに心当たりがない場合は、管理者またはサポートまでご連絡ください。</p>
