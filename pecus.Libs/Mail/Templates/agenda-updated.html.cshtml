@model Pecus.Libs.Mail.Templates.Models.AgendaUpdatedEmailModel
@{
    Layout = "_Layout.html.cshtml";
}

<h2>予定が変更されました</h2>

<p>以下の予定が変更されました。</p>

<p><strong>@Model.AgendaTitle</strong></p>

<ul>
    <li>日時: @if (Model.IsAllDay)
        {
            <span>@Model.StartAt.ToString("yyyy/MM/dd") (終日)</span>
        }
        else
        {
            <span>@Model.StartAt.ToString("yyyy/MM/dd HH:mm") - @Model.EndAt.ToString("HH:mm")</span>
        }
    </li>
    @if (!string.IsNullOrWhiteSpace(Model.Location))
    {
        <li>場所: @Model.Location</li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Url))
    {
        <li>URL: <a href="@Model.Url">@Model.Url</a></li>
    }
    <li>変更者: @Model.UpdatedByName</li>
    <li>組織: @Model.OrganizationName</li>
</ul>

@if (!string.IsNullOrWhiteSpace(Model.ChangeDescription))
{
    <div style="margin: 16px 0; padding: 12px; background-color: #fff3cd; border-radius: 4px; border: 1px solid #ffc107;">
        <strong>変更内容:</strong><br />
        @Model.ChangeDescription
    </div>
}

<div style="text-align:center; margin:20px 0;">
    <a href="@Model.AgendaUrl" class="button">予定を確認</a>
</div>
