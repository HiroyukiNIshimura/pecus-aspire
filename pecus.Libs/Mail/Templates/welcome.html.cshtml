@model Pecus.Libs.Mail.Templates.Models.WelcomeEmailModel
@{
    Layout = "_Layout.html.cshtml";
}

<h2>ようこそ、@Model.UserName さん</h2>

<p>@Model.OrganizationName へのご登録ありがとうございます。アカウントが作成されました。</p>

@if (!string.IsNullOrEmpty(Model.WorkspaceName))
{
    <p>あなたは <strong>@Model.WorkspaceName</strong> ワークスペースに招待されています。</p>
}

<div class="divider"></div>

<p><strong>アカウント情報:</strong></p>
<ul>
    <li>ユーザー名: @Model.UserName</li>
    <li>メールアドレス: @Model.Email</li>
    <li>組織: @Model.OrganizationName</li>
    <li>登録日: @Model.CreatedAt.ToString("yyyy年MM月dd日")</li>
</ul>

<div style="text-align:center;">
    <a href="@Model.LoginUrl" class="button" style="background:#4CAF50;">今すぐログイン</a>
</div>

<div class="divider"></div>

<p style="font-size:14px; color:#666;">このメールに心当たりがない場合は、このメールを無視してください。</p>

