@*
共通レイアウト（ヘッダ／フッタ）
ミニマル＆プロフェッショナルなデザイン
*@
@using Pecus.Libs.Mail.Templates
@using RazorLight.Text
@model EmailTemplateModelBase
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.App.Name</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', Arial, sans-serif;
            line-height: 1.8;
            color: #374151;
            background: #f9fafb;
            margin: 0;
            padding: 0;
            -webkit-font-smoothing: antialiased;
        }
        img {
            max-width: 100%;
            height: auto;
        }
        .container {
            max-width: 560px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .card {
            background: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            border: 1px solid #e5e7eb;
        }
        .header {
            padding: 32px 32px 24px 32px;
            border-bottom: 1px solid #f3f4f6;
        }
        .brand {
            display: inline-flex;
            align-items: center;
            font-size: 20px;
            font-weight: 600;
            color: #111827;
            letter-spacing: -0.5px;
        }
        .brand-logo {
            width: 42px;
            height: auto;
            margin-right: 8px;
        }
        .content {
            padding: 32px;
            color: #374151;
            font-size: 15px;
        }
        .content p {
            margin: 0 0 16px 0;
        }
        .content p:last-child {
            margin-bottom: 0;
        }
        .button {
            display: inline-block;
            padding: 12px 24px;
            background: #111827;
            color: #ffffff !important;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 500;
            font-size: 14px;
            margin: 8px 0;
        }
        .button-secondary {
            background: #ffffff;
            color: #374151 !important;
            border: 1px solid #d1d5db;
        }
        .warning {
            background: #fef3c7;
            border-left: 3px solid #f59e0b;
            padding: 12px 16px;
            border-radius: 0 4px 4px 0;
            margin: 16px 0;
            color: #92400e;
            font-size: 14px;
        }
        .info {
            background: #f0f9ff;
            border-left: 3px solid #0ea5e9;
            padding: 12px 16px;
            border-radius: 0 4px 4px 0;
            margin: 16px 0;
            color: #0c4a6e;
            font-size: 14px;
        }
        .code {
            display: inline-block;
            background: #f3f4f6;
            padding: 2px 8px;
            border-radius: 4px;
            font-family: 'SF Mono', Monaco, 'Courier New', monospace;
            font-size: 14px;
            color: #1f2937;
        }
        .code-block {
            display: block;
            background: #f9fafb;
            border: 1px solid #e5e7eb;
            padding: 16px;
            border-radius: 6px;
            font-family: 'SF Mono', Monaco, 'Courier New', monospace;
            font-size: 24px;
            letter-spacing: 4px;
            text-align: center;
            color: #111827;
            margin: 16px 0;
        }
        .footer {
            padding: 24px 32px;
            text-align: left;
            font-size: 13px;
            color: #6b7280;
            border-top: 1px solid #f3f4f6;
            background: #fafafa;
        }
        .footer p {
            margin: 0 0 8px 0;
        }
        .footer p:last-child {
            margin-bottom: 0;
        }
        .footer a {
            color: #6b7280;
            text-decoration: underline;
        }
        .divider {
            border: none;
            border-top: 1px solid #e5e7eb;
            margin: 24px 0;
        }
        a {
            color: #2563eb;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .muted {
            color: #9ca3af;
            font-size: 13px;
        }
        table {
            width: 90%;
            margin: 16px auto;
            border-collapse: collapse;
            font-size: 14px;
        }
        table th,
        table td {
            border: 1px solid #e5e7eb;
            padding: 10px 12px;
            text-align: left;
        }
        table th {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
        }
        table td {
            color: #4b5563;
        }
        table tr:nth-child(even) td {
            background: #fafafa;
        }
        table td.label {
            background: #f9fafb;
            color: #6b7280;
            width: 120px;
        }
        table td.value {
            font-weight: 600;
        }
        table td.value-right {
            font-weight: 600;
            text-align: right;
        }
        table tr.warning td {
            background: #fef3c7;
        }
        table tr.warning td.value-right {
            color: #dc2626;
        }
        .text-success {
            color: #16a34a;
        }
        .text-danger {
            color: #dc2626;
        }
        .section-divider {
            border: none;
            border-top: 2px solid #3b82f6;
            margin: 24px 0;
        }
        .card-box {
            background: #f9fafb;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 16px;
        }
        .card-box h4 {
            margin: 0 0 12px 0;
            color: #2563eb;
        }
        .card-box p {
            margin: 0 0 8px 0;
        }
        .card-box ul {
            margin: 0;
            padding-left: 20px;
        }
        .card-box li {
            margin-bottom: 4px;
        }
        .content-box {
            margin: 12px 0;
            padding: 12px;
            background: #f9fafb;
            border-radius: 4px;
            border: 1px solid #e5e7eb;
        }
        .content-box.pre {
            white-space: pre-wrap;
        }
        .update-list {
            margin: 0;
            padding: 0 0 0 20px;
        }
        .update-list li {
            margin: 8px 0;
            line-height: 1.6;
        }
        .update-meta {
            font-size: 13px;
            color: #6b7280;
        }
        .center {
            text-align: center;
        }
        .inline-list {
            margin: 8px 0 0 0;
            padding-left: 20px;
        }
        .diff-box {
            padding: 10px;
            margin: 5px 0;
            border-radius: 4px;
        }
        .diff-box p {
            margin: 0;
            white-space: pre-wrap;
        }
        .diff-box.removed {
            background-color: #fee2e2;
        }
        .diff-box.removed p {
            text-decoration: line-through;
            color: #6b7280;
        }
        .diff-box.added {
            background-color: #dcfce7;
        }
        .detail-box {
            margin: 16px 0;
            padding: 12px;
            background-color: #f9fafb;
            border-radius: 4px;
        }
        .change-box {
            margin: 16px 0;
            padding: 12px;
            background-color: #fef3c7;
            border-radius: 4px;
            border: 1px solid #fbbf24;
        }
        .code-url {
            word-break: break-all;
            display: block;
            padding: 12px;
        }
        .mt-lg {
            margin-top: 20px;
        }
        .pre-wrap {
            white-space: pre-wrap;
            margin: 0;
        }
        .info p.pre-wrap,
        .warning p.pre-wrap {
            margin: 8px 0 0 0;
        }
        .bold {
            font-weight: 600;
        }
        .small-text {
            font-size: 14px;
            color: #6b7280;
        }
        .text-danger {
            color: #dc2626;
        }
        .danger-box {
            margin: 16px 0;
            padding: 12px;
            background-color: #fee2e2;
            border-radius: 4px;
            border: 1px solid #fca5a5;
        }
        h2.danger {
            color: #dc2626;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="header">
                <span class="brand">
                    <svg class="brand-logo" viewBox="0 0 986 590" xmlns="http://www.w3.org/2000/svg">
                        @(value: new RawString(Model.LogoSvg))
                    </svg>
                    @Model.App.Name
                </span>
            </div>
            <div class="content">
                @RenderBody()
            </div>
            <div class="footer">
                <p>このメールは <a href="@Model.App.SiteUrl">@Model.App.Name</a> から自動送信されています。返信しないでください。</p>
                <p class="muted mt-lg">&copy; @Model.App.Year @Model.App.CompanyName. All rights reserved.</p>
            </div>
        </div>
    </div>
</body>
</html>
